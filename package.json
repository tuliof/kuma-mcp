{
  "name": "kuma-mcp",
  "version": "1.0.0",
  "description": "A MCP server for uptime-kuma v2",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "kuma-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run tsc --emitDeclarationOnly",
    "dev": "bun run src/index.ts",
    "test:integration": "AGENT=1 ./scripts/test-with-docker.sh",
    "lint": "biome check .",
    "setup-kuma": "bun run scripts/setup-kuma-credentials.ts",
    "preinspect": "docker-compose up -d && bun run setup-kuma",
    "inspect": "bunx @modelcontextprotocol/inspector bun run dev",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "mcp",
    "uptime-kuma",
    "monitoring",
    "model-context-protocol"
  ],
  "author": "Tulio Fernandes",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.21.0",
    "@t3-oss/env-core": "^0.13.8",
    "socket.io-client": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/bun": "^1.3.1",
    "typescript": "^5.7.2"
  }
}
