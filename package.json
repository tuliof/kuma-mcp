{
  "name": "kuma-mcp",
  "version": "1.0.0",
  "description": "A MCP server for uptime-kuma v2",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "kuma-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun run tsc --emitDeclarationOnly",
    "dev": "bun run src/index.ts",
    "test:integration": "bun test tests/integration.test.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "bun run build"
  },
  "keywords": [
    "mcp",
    "uptime-kuma",
    "monitoring",
    "model-context-protocol"
  ],
  "author": "Tulio Fernandes",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.21.0",
    "socket.io-client": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@types/node": "^22.10.1",
    "@types/bun": "^1.3.1",
    "typescript": "^5.7.2"
  }
}
